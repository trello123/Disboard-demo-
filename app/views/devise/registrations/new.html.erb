<section class="w-2/5 p-5 m-auto rounded-lg shadow-2xl bg-white-2">
  <h2 class="py-5 text-2xl text-center">歡迎加入!</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <section class="flex flex-col items-center">
      <div class="py-3 form-control">
        <label class="input-group">
          <span><%= f.label :username ,'暱稱'%></span>
            <%= f.text_field :username, autofocus: true, class:"input input-bordered" %>
        </label>
      </div>
      <div class="py-3 form-control">
        <label class="input-group">
          <span><%= f.label :email ,'信箱'%></span>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input input-bordered" %>
        </label>
      </div>
      <div class="pt-3 form-control ">
        <label class="input-group">
          <span><%= f.label :password ,'密碼'%></span>
          <%= f.password_field :password, autocomplete: "current-password" , class:"input input-bordered"%>
        </label>
      </div>
      <div class="pt-3 form-control ">
        <label class="input-group">
          <span><%= f.label :password_confirmation , '確認密碼' %></span>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"input input-bordered" %>
        </label>
      </div>

      <div class="flex flex-col items-center p-3 ">
        <%= f.submit "註冊" , class:"btn btn-wide"%>
        <p class="text-sm"> 已經有帳號了嗎？ <%= link_to "登入", new_session_path(resource_name), class:"text-Azure-blue-3" %></p>
      </div>
    
      <div class="flex justify-center w-48 gap-2 pt-3 border-t-2 border-black">
        <% if devise_mapping.omniauthable? %>
          <% resource_class.omniauth_providers.each do |provider| %>
            <%= button_to omniauth_authorize_path(resource_name, provider), data: { turbo: false }, method: :post, class: 'pt-3' do %>
              <% if provider == :google_oauth2 %>
                <img src="/assets/google_icon.png" alt="Google" class="w-[50px] h-[50px] bg-white rounded-full relative  hover:top-[2px] active:top-[4px]">
              <% elsif provider == :github %>
                <img src="/assets/github-mark.png" alt="Github" class="w-[50px] h-[50px] bg-white rounded-full relative hover:top-[2px] active:top-[4px]">
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </section>
  <% end %>
</section>
