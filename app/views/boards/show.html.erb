<div class="flex w-16">
  <div class="flex flex-col">
    <%= link_to '刪除', board_path(@board.id), method: 'delete', data: {confirm: 'sure?' }, class: 'btn-danger mx-2' %>
  </div>

  <div class="flex flex-col justify-center">
    <div>
      <%= turbo_frame_tag(@board) do %>
        <%= @board.name %>
        <%= link_to '更改名稱', edit_board_path(@board.id), class: 'btn-primary mx-2' %>
      <% end %>
    </div>
    <div class="flex">
      <%= render partial: "containers/container", collection: @containers %>
      <button class="w-10 h-10 mt-10 mb-5 sidebar-icon"><%= link_to '+  ', new_board_container_path(@board.id), class: 'w-full h-full ' %></button>
    </div>
  </div>
</div>