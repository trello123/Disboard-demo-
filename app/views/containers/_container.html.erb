
  <div class="relative flex flex-col items-center w-64 px-5 py-3 m-5 rounded-md max-w-64 bg-slate-200 min-w-max">
    <div class="flex items-center gap-3"><%= link_to container.title, container_path(container.id), data: { turbo: false }, class: "mb-0" %><%= link_to '更改', edit_container_path(container.id), class: 'btn-primary p-2 text-xs bg-gray-400 hover:bg-Azure-blue' %></div>
    <div>
      <div>
        <%= link_to 'x', container_path(container.id), method: 'delete', data: {confirm: 'sure?' }, class: 'absolute -top-3 -right-3 bg-gray-200 drop-shadow-2xl border border-gray-200  px-2 rounded-full' %>
      </div>
      <div>
      <section id="card-list" data-controller="sortable">
        <% container.cards.each do |card|  %>
          <div class="relative flex justify-between w-full px-3 py-2 mt-2 bg-gray-400 border rounded-md active:-bottom-[2px] hover:bottom-[1px] drop-shadow-xl" >
            <div class="">
              <%= link_to card.title, container_card_path(@board,card.id) ,class:'text-ellipsis' %>
            </div>
            <div class="flex items-center justify-center gap-1">
              <%= link_to '更新', edit_container_card_path(@board,card.id), class: 'inline-block relative btn-primary mx-1 text-sm bg-slate-200 text-black active:-bottom-[2px] hover:bottom-[1px]' %>
              <%= link_to 'x', container_card_path(@board,card.id), method: 'delete', data: { turbo: false, confirm: 'sure?' }, class: 'inline-block relative bg-slate-200 w-6  px-2 rounded-full active:-bottom-[2px] hover:bottom-[1px]' %>
            </div>
          </div>
        <% end %>
        </section>
        <div class="flex justify-start"><%= link_to '新增項目', new_container_card_path(container.id), data: { turbo: false }, class: 'inline-block relative text-center btn-primary active:-bottom-[2px] hover:bottom-[1px] mt-5 w-32' %></div>
      </div>
    </div>
  </div>
