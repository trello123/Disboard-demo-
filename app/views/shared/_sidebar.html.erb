  <%# <button class="sidebar-icon"><i class="fa-solid fa-user-tie"></i></button> %>
  <%# <button class="sidebar-icon"><i class="fa-solid fa-user-tie"></i></button> %>
<% end %>

<% if @containers.present? %>
  <button class="sidebar-icon"><i class="fa-solid fa-user-tie"><%= link_to '專案總表', boards_path, class: 'sidebar-icon' %></i></button>
<% else %>
  <%= form_with(model: @board, url: boards_path) do |f| %>
    <button class="sidebar-icon"><i class="fa-solid fa-plus"><%= f.submit '', class: 'focus:bg-cyan-500'%></i></button>
  <% end %>
<% end %>
</div>