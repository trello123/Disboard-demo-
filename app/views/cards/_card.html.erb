<%= turbo_frame_tag card , data: { card_id: card.id }  do %>
  <div class="flex justify-between py-2 m-6 border rounded-md bg-slate-200" >
    <div class="mx-5 my-2">
      <%= link_to card.title, card_path(card.id) %>
    </div>
    <div >
      <%= link_to '更新', edit_card_path(card.id), class: 'btn-primary mx-2' %>
      <%= link_to '刪除', card_path(card.id), method: 'delete', data: {confirm: 'sure?' }, class: 'btn-danger mx-2' %>
    </div>
  </div>
<% end %>