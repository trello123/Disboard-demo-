<h1>Edit item</h1>

<% if card.errors.any? %>
    <% card.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  <% end %>

<%=  form_for(card) do |f| %>
  <div>
    <%= f.label :title, '標題'  %>
    <%= f.text_field :title %>
    <%= f.label :title, '(必填)'  %>
  </div>

  <div>
    <%= f.label :intro, '簡介' %>
    <%= f.text_area :intro %>
    <%= f.label :intro, '(必填)'  %>
  </div>

  <div>
    <%= f.label :level, '難易度' %>
    <%= f.select :level, Card.level_list %>
  </div>

  <%= f.submit '建立項目' %>

<% end %>